!!! 5
html(lang="en")
	head
		title Notes.fm
		meta(name="description", content="Online notes for mobile and desktop")
		meta(name="keywords", content="notes, notepad, note pad, note taking, online notes, desktop notes, mobile notes, web notes, sync")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
		link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=Open+Sans")
		link(rel="stylesheet", type="text/css", href="/stylesheets/main.css")
		link(rel="shortcut icon", href="/images/favicon.png")

		script(id="note_item_tmpl", type="text/x-jquery-tmpl")
			li(id="note_item_${id}", note="${id}")
				span.highlight
				span.title ${title}
				span.time ${date}
				span.delete: a(href="javascript:false;") delete

	body
		div.pad
			div.main_error
			div.list
				div.opts
					a.btn(href="javascript:Notes.createNote()") New
					input(type="text", id="search", placeholder="Search")
				ul#notes

				div.controls
					p: a(href="javascript:Notes.saveNote()") Save current note

			div.editor
				div.opts
					input(type="text", id="note_title", placeholder="Untitled")
					div.save_status
				div#note_text.text(contenteditable="true")
					//| This is text

	footer
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js")
		script(src="http://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js")
		script(src="http://www.parsecdn.com/js/parse-1.0.10.min.js")
		script(src="/javascript/main.js")
		include ../components/analytics.html