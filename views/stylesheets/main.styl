// styles

html, body
	margin 0
	padding 0
	width 100%
	height 100%

body
	position relative
	font-size 14px
	font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
	color #555
	overflow hidden

a.btn
    display inline-block
    margin 0
    padding 0 10px
    font-family verdana, "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-size 12px
    font-weight bold
    line-height 28px
    text-decoration none
    text-transform capitalize
    text-shadow 0 1px 1px rgba(0,0,0,0.1)
    color #fff
    background #D74635
    background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#DD4B39), to(#D14836))
    border-radius 3px
    border 1px solid #DD4B39

    &:hover
        background -webkit-gradient(linear, 0% 0%, 0% 100%, from(#E05D4C), to(#D65A4A))

div.pad
    display -webkit-box
    position absolute
    width 100%
    height 100%
    overflow hidden

    div.list
        width 280px        
        height 100%
        border-right 1px solid #eee

    div.editor
        height 100%
        -webkit-box-flex 1

    div.list > div.opts,
    div.editor > div.opts
        display -webkit-box
        padding 8px
        height 30px
        background #f6f6f6
        border-bottom 1px solid #eee

        input[type="text"]
            display block
            margin 0 0 0 8px
            padding 5px
            line-height 18px
            border 1px solid #e3e3e3
            border-top 1px solid #ccc
            -webkit-box-flex 1
            

        p
            margin 0












